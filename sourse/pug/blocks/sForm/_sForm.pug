mixin sForm()
	// start sForm
	+b.SECTION.sForm.section#sForm&attributes(attributes)
		.container
			+e.FORM.box.quiz-form-js
				+step({
					title: "Який обсяг палива ви плануєте закупити?",
					score: "1/3",
					img: "img/@2x/fuelbarel.jpg",
					backMuted:true,
					forward:true,
					active:"active",
				})
					+inputonslide("1","Від 2000л до 10000л")
					+inputonslide("2","Від 10000л до 20000л")
					+inputonslide("3","Більше 20000л")
				+step({
					title: "Куди потрібна доставка?",
					score: "2/3",
					img: "img/@2x/ukrainemap.jpg",
					forward: true,
				})
					+inputonslide("1","Черкаська область")
					+inputonslide("2","Полтавська область")
					+inputonslide("3","Кіровоградська область")
					+inputonslide("4","Вінницька область")
					+inputonslide("5","Інший варіант")
				+step({
					title: "Оберіть зручний спосіб отримання комерційної пропозиції",
					score: "3/3",
					img: "img/@2x/handmail.jpg",
					forward: true,
				})
					.tabs
						+e.icon-row.row.align-items-center.tabs__caption
							.col-auto
								+e.LABEL.icon-radio.tabs__btn.active
									input(type="radio" name="volume" value="tg")
									img(src="img/svg/tgapp.svg").radio-img
							.col-auto
								+e.LABEL.icon-radio.tabs__btn
									input(type="radio" name="volume" value="tg")
									img(src="img/svg/viberapp.svg").radio-img
							.col-auto
								+e.LABEL.icon-radio.tabs__btn
									input(type="radio" name="volume" value="tg")
									img(src="img/svg/gmailapp.svg").radio-img
						+e.input-icon.tabs__wrap
							.tabs__content.active
								+e.input-wrap.form-group
									+e.INPUT(name="tgname" type="text"  placeholder="Ваше ім’я").input.form-control
								+e.input-wrap.form-group
									+e.INPUT(name="tgtel" type="tel"  placeholder="+380 (99) 999-99-99" pattern="[+][0-9]{3}[ ][(][0-9]{2}[)][ ][0-9]{3}-[0-9]{2}-[0-9]{2}" inputmode="text").input.form-control
							.tabs__content
								+e.input-wrap.form-group
									+e.INPUT(name="vibername" type="text"  placeholder="Ваше ім’я").input.form-control
								+e.input-wrap.form-group
									+e.INPUT(name="vibertel" type="tel"  placeholder="+380 (99) 999-99-99" pattern="[+][0-9]{3}[ ][(][0-9]{2}[)][ ][0-9]{3}-[0-9]{2}-[0-9]{2}" inputmode="text").input.form-control
							.tabs__content
								+e.INPUT(name="email" type="email"  placeholder="Введіть вашу електронну пошту ").input.form-control


mixin inputonslide(value,text)
	+e.LABEL.r-item.row.align-items-center.d-flex
		.col-auto
			input(type="radio" name="volume" value=value)
			.circle
		.col
			+e.lbl-txt=text
mixin step(data)
	+e.step.step-js(class=`${data.active ? data.active : ''}`)
		+e.row.row.gx-0.gy-0
			+e.col.col-6
				+e.title=data.title
				+e.radio-group
					block
				+e.btn-row.row
					.col-auto
						+e.btn--back.back-btn-js(class=`${data.backMuted ? "disabled" : ''}`)
							+icon("arrow-left")
							span назад
					.col-auto
						if data.forward
							+e.btn--forward.forward-btn-js.disabled
								span далі
								+icon("arrow-right")
						else
							+e.btn--send.send-btn-js.disabled(type="submit") Відправити
				+e.page-score=data.score
			.col-auto
				+e.img-box
					img(src=data.img)
